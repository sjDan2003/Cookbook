#:kivy 1.8.0
#: import main CookbookGui


<RecipeButton>:
    on_press: root.ChangeRecipe(self.input_data)

<RecipeSaveScreen>:
    name: 'recipe save'
    GridLayout:
        cols: 3
        rows: 2
        padding: 10
        spacing: 10

        Button:
            text: 'Save to Local Storage'
            on_press: root.SaveToLocalStorage()
        Button:
            text: 'Save to Google Drive'
        Button:
            text: 'Save to Dropbox'
        Button:
            text: 'Load from Local Storage'
            on_press: root.LoadFromLocalStorage()
        Button:
            text: 'Load from Google Drive'
        Button:
            text: 'Load from Dropbox'

<RecipeImportScreen>:
    urlInput: urlInputId
    recipeName: recipeNameId
    recipeInstructions: recipeInstructionsId
    recipeIngredients: recipeIngredientsId
    name: 'recipe import'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .05
            Label:
                text: 'Enter Url'
                size_hint_x: .15
            TextInput:
                id: urlInputId
                size_hint_x: 1
                font_size: '12dp'
                multiline: False
            Button:
                text: 'Import Recipe'
                size_hint_x: .25
                on_press: root.ImportRecipe()
        BoxLayout:
            orientation: "vertical"
            size_hint_y: 1
            Label:
                id: recipeNameId
                font_size: "50dp"
                size_hint_y: .2
                text: "Recipe Title"

            GridLayout:
                size_hint_y: 1
                cols: 2

                TextInput:
                    id: recipeIngredientsId
                    font_size: "20dp"

                TextInput:
                    id: recipeInstructionsId
                    font_size: "20dp"
                    multiline: True
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Button:
                text: 'Cancel'
                on_press: root.CancelRecipeImport()
            Button:
                text: 'Confirm'
                on_press: root.ConfirmRecipeImport()


<RecipeViewScreen>:
    recipeList: recipeListId
    recipeName: recipeNameId
    recipeInstructions: recipeInstructionsId
    recipeIngredients: recipeIngredientsId
    name: 'recipe view'
    id: recipeViewScreenId
    GridLayout:
        cols: 1
        rows: 2
        spacing: 10
        padding: 5

        BoxLayout:
            orientation: "vertical"

            Label:
                id: recipeNameId
                font_size: "50dp"
                size_hint_y: .2
                text: ""

            GridLayout:
                size_hint_y: 1
                cols: 2

                TextInput:
                    id: recipeIngredientsId
                    font_size: "25dp"
                    text: ""

                TextInput:
                    id: recipeInstructionsId
                    font_size: "25dp"
                    multiline: True
        GridLayout:
            cols: 2
            rows: 1
            size_hint_y: .2
            BoxLayout:
                orientation: "vertical"
                size_hint_x: .25

                Button:
                    id: changeButtonId
                    size_hint_y: .10
                    text: "Save/Load Recipes"
                    on_press: root.SaveRecipes()
                Button:
                    text: 'Go To Recipe Import'
                    size_hint_y: .10
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'recipe import'

            RecycleView:
                data: []
                id: recipeListId
                viewclass: 'RecipeButton'
                RecycleBoxLayout:
                    default_size_hint: 1, None
                    orientation: 'horizontal'




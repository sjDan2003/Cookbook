#:kivy 1.8.0
#: import main CookbookGui


<RecipeButton>:
    on_press: root.ChangeRecipe(self.input_data)


<RecipeImportScreen>:
    urlInput: urlInputId
    recipeName: recipeNameId
    recipeInstructions: recipeInstructionsId
    recipeIngredients: recipeIngredientsId
    name: 'recipe import'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .05
            Label:
                text: 'Enter Url'
                size_hint_x: .15
            TextInput:
                id: urlInputId
                size_hint_x: 1
                font_size: '12dp'
                multiline: False
            Button:
                text: 'Import Recipe'
                size_hint_x: .25
                on_press: root.ImportRecipe()
        BoxLayout:
            orientation: "vertical"
            size_hint_y: 1
            Label:
                id: recipeNameId
                font_size: "50dp"
                size_hint_y: .2
                text: "Recipe Title"

            GridLayout:
                size_hint_y: 1
                cols: 2

                TextInput:
                    id: recipeIngredientsId
                    font_size: "20dp"

                TextInput:
                    id: recipeInstructionsId
                    font_size: "20dp"
                    multiline: True
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Button:
                text: 'Cancel'
                on_press: root.CancelRecipeImport()
            Button:
                text: 'Confirm'
                on_press: root.ConfirmRecipeImport()


<RecipeViewScreen>:
    recipeList: recipeListId
    recipeName: recipeNameId
    recipeInstructions: recipeInstructionsId
    recipeIngredients: recipeIngredientsId

    name: 'recipe view'
    id: recipeViewScreenId
    GridLayout:
        cols: 2
        rows: 1
        spacing: 10
        padding: 10

        BoxLayout:
            orientation: "vertical"
            size_hint_x: .25
            RecycleView:
                data: []
                id: recipeListId
                viewclass: 'RecipeButton'
                RecycleBoxLayout:
                    default_size_hint: 1, None
                    orientation: 'vertical'
            Button:
                id: changeButtonId
                size_hint_y: .25
                text: "Change Recipe Name"
                on_press: root.ChangeRecipeName()
            Button:
                text: 'Go To Recipe Import'
                size_hint_y: .25
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'recipe import'

        BoxLayout:
            orientation: "vertical"

            Label:
                id: recipeNameId
                font_size: "50dp"
                size_hint_y: .2
                text: "Pork Tenderloin"

            GridLayout:
                size_hint_y: 1
                cols: 2

                TextInput:
                    id: recipeIngredientsId
                    font_size: "25dp"
                    text: "Ingredients"

                TextInput:
                    id: recipeInstructionsId
                    font_size: "25dp"
                    multiline: True




#:kivy 1.8.0
#: import main CookbookGui
#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter


<RecipeButton>:
    on_press: app.root.ChangeRecipe(self.text)


<CookbookLayout>:
    recipeList: recipeListId
    recipeName: recipeNameId
    recipeInstructions: recipeInstructionsId
    recipeIngredients: recipeIngredientsId
    cols: 2
    rows: 1
    spacing: 10
    padding: 10

    BoxLayout:
        orientation: "vertical"
        size_hint_x: .25
        ListView:
            id: recipeListId
            size_hint_y: 1
            adapter:
                ListAdapter(data=["Pork Tenderloin", "Sous Vide Salmon"], cls=main.RecipeButton)
        Button:
            id: changeButtonId
            size_hint_y: .25
            text: "Change Recipe Name"
            on_press: root.ChangeRecipeName()

    BoxLayout:
        orientation: "vertical"

        Label:
            id: recipeNameId
            font_size: "50dp"
            size_hint_y: .2
            text: "Pork Tenderloin"

        GridLayout:
            size_hint_y: 1
            cols: 2

            TextInput:
                id: recipeIngredientsId
                font_size: "25dp"
                text: "Ingredients"

            TextInput:
                id: recipeInstructionsId
                font_size: "25dp"
                multiline: True



